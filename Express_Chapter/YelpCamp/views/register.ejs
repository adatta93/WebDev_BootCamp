<% include ./partials/header %>

<div class="container card bg-transparent justify-content-center col-md-4 col-lg-3 register-card">
    <h2 class="text-center card-title text-white">Register</h2>
    <div>
        <form action="/register" method="POST">
            <div class="form-group">
                <div class="form-group">
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text"><i class="fa fa-user"></i></span>
                        </div>
                        <input type="text" name="username" placeholder="Enter Username" class="form-control">
                    </div>
                </div>
                <div class="form-group">
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text"><i class="fa fa-key"></i></span>
                        </div>
                        <input type="password" name="password" placeholder="Enter Password" class="form-control">
                    </div>
                </div>
                <div class="form-group">
                    <button class="btn btn-warning btn-sm btn-block">Register</button>
                </div>
        </form>
    </div>
</div>

<% include ./partials/footer %>