<% include ../partials/header %>

<div class="container">
    <h2 class="text-center">Add New Comment to <%= camp.name %></h2>

    <div style="width: 40%;margin: 25px auto;">
        <form action="/campgrounds/<%= camp._id %>/comments" method="post">
            <div class="form-group">
                <input type="text" name="comment[text]" placeholder="Enter Comment" class="form-control">
            </div>
            <div class="form-group">
                <button class="btn btn-primary btn-sm btn-block">Submit</button>
            </div>
        </form>
        <a href="/campgrounds/<%= camp._id %>">Go Back</a>
    </div>

</div>

<% include ../partials/footer %>