<% include ../partials/header %>

<div class="container">
    <h2 class="text-center">Edit Comment</h2>
    <div style="width: 40%;margin: 25px auto;">
        <form action="/campgrounds/<%= camp_id %>/comments/<%= comm._id %>?_method=PUT" method="post">
            <div class="form-group">
                <input type="text" name="comm[text]" value="<%= comm.text %>" placeholder="Enter Comment"
                    class="form-control">
            </div>
            <div class="form-group">
                <button class="btn btn-primary btn-sm btn-block">Submit</button>
            </div>
        </form>
        <a href="/campgrounds/<%= camp_id %>">Go Back</a>
    </div>
</div>

<% include ../partials/footer %>