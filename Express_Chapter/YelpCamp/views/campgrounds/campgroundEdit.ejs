<% include ../partials/header %>

<div class="container">
    <h2 class="text-center">Edit <%= camp.name %></h2>
    <div style="width: 40%;margin: 25px auto;">
        <form action="/campgrounds/<%= camp._id %>?_method=PUT" method="post">
            <div class="form-group">
                <input type="text" name="camp[name]" value="<%= camp.name %>" placeholder="Enter Name"
                    class="form-control">
            </div>
            <div class="form-group">
                <input type="text" name="camp[image]" value="<%= camp.image %>" placeholder="Enter Image"
                    class="form-control">
            </div>
            <div class="form-group">
                <input type="text" name="camp[description]" value="<%= camp.description %>"
                    placeholder="Enter Description" class="form-control">
            </div>
            <div class="form-group">
                <button class="btn btn-primary btn-sm btn-block">Submit</button>
            </div>
        </form>
        <a href="/campgrounds/<%= camp._id %>">Go Back</a>
    </div>
</div>

<% include ../partials/footer %>